@model BookClient.Models.Profile.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
}

<div class="profile-container">
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card profile-card">
                    <div class="card-header">
                        <h4 class="mb-0">
                            <i class="fas fa-user"></i> My Profile
                        </h4>
                    </div>
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <div class="profile-info">
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    <div class="profile-avatar">
                                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                                        <h5 class="mt-3">@Model.Fullname</h5>
                                        <p class="text-muted">@Model.RoleName</p>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="profile-details">
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong><i class="fas fa-envelope"></i> Email:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.Email
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong><i class="fas fa-phone"></i> Phone:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.PhoneNumber
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong><i class="fas fa-map-marker-alt"></i> Address:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @Model.Address
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong><i class="fas fa-birthday-cake"></i> Birth Date:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @(Model.BirthDay?.ToString("dd/MM/yyyy") ?? "Not provided")
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-4">
                                                <strong><i class="fas fa-toggle-on"></i> Status:</strong>
                                            </div>
                                            <div class="col-sm-8">
                                                @if (Model.IsDeactivated)
                                                {
                                                    <span class="badge bg-danger">Deactivated</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="Edit" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Edit Profile
                                </a>
                                <a asp-action="ChangePassword" class="btn btn-warning">
                                    <i class="fas fa-key"></i> Change Password
                                </a>
                            </div>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>