@model BookClient.Models.Authentication.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark text-center">
                <h4 class="mb-0">
                    <i class="fas fa-key"></i> Forgot Password
                </h4>
                <p class="mb-0">Reset your password</p>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-envelope fa-3x text-warning mb-3"></i>
                    <p class="text-muted">
                        Enter your email address and we'll send you an OTP code to reset your password.
                    </p>
                </div>

                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i> @Html.DisplayNameFor(m => m.Email)
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email address" autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-paper-plane"></i> Send OTP Code
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center bg-light">
                <p class="mb-0">
                    Remember your password? 
                    <a asp-action="Login" class="text-decoration-none fw-bold">
                        <i class="fas fa-sign-in-alt"></i> Sign in here
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}