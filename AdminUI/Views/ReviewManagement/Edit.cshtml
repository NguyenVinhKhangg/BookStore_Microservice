@model AdminUI.Models.Review.ReviewViewModel
@{
    ViewData["Title"] = "Edit Review";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="fade-in-up">
    <h2><i class="fas fa-edit"></i> @ViewData["Title"]</h2>

    @if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors.Any())
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i> @ViewData.ModelState[""].Errors.First().ErrorMessage
        </div>
    }

    <form asp-action="Edit" method="post">
        <input asp-for="ReviewID" type="hidden" />
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="BookID" class="form-label"></label>
                <select asp-for="BookID" asp-items="Model.BookOptions" class="form-select">
                    <option value="">-- Select Book --</option>
                </select>
                <span asp-validation-for="BookID" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="UserID" class="form-label"></label>
                <select asp-for="UserID" asp-items="Model.UserOptions" class="form-select">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Rating" class="form-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Comment" class="form-label"></label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save
                </button>
                <a asp-action="Index" asp-controller="ReviewManagement" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}